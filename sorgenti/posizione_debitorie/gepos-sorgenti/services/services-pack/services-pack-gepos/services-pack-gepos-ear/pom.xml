<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>it.tasgroup.iris.services</groupId>
    <artifactId>services-pack-gepos</artifactId>
    <version>0.1</version>
  </parent>
  <artifactId>services-pack-gepos-ear</artifactId>
  <packaging>ear</packaging>
  <name>- ear - gepos</name>
  <description>GePos payflowpa ear project</description>
  <version>${services.release.version}</version>
  <properties>
    <earName>gepos-gpa-${services.release.version}</earName>
    <ear.release.folder>${fe.release.folder}/gepos</ear.release.folder>
  </properties>
  <dependencies>
    <!-- internal conf -->
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-pack-gepos-conf</artifactId>
      <version>${services.release.version}</version>
    </dependency>
    <!-- EJBs -->
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-internal-service</artifactId>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-iris-persistence-ejb</artifactId>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-business-ejb</artifactId>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-facade-ejb</artifactId>
      <type>ejb</type>
    </dependency>
    <!-- WEBApps -->
    <dependency>
       <groupId>it.tasgroup.iris.services</groupId>
       <artifactId>services-webconsole</artifactId>
       <type>war</type>
      <version>${services.release.version}</version> 
    </dependency>
    <!-- WEB-SERVICES -->
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-ws</artifactId>
      <type>war</type>
      <version>${services.release.version}</version>
    </dependency>
    <!-- Rest API services -->
	<dependency>
			<groupId>it.tasgroup.iris.services</groupId>
			<artifactId>services-rest-api</artifactId>
			<type>war</type>
			<version>${services.release.version}</version>
	</dependency>
    <dependency>
		<groupId>it.tasgroup.iris.services</groupId>
		<artifactId>services-ndp-rest-api</artifactId>
		<type>war</type>
		<version>${services.release.version}</version>
	</dependency>
    <!-- dipendenze comuni a tutte le webapp -->
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-bundle</artifactId>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-util-fe</artifactId>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.shared</groupId>
      <artifactId>shared-util-fe</artifactId>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-client-configuration</artifactId>
    </dependency>
    <dependency>
      <groupId>it.tasgroup.iris.services</groupId>
      <artifactId>services-business-delegator</artifactId>
    </dependency>
    <dependency>
      <groupId>displaytag</groupId>
      <artifactId>displaytag</artifactId>
    </dependency>
  </dependencies>
  <build>
    <!-- CREAZIONE EAR -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <version>6</version>
          <displayName>${earName}</displayName>
          <finalName>${earName}</finalName>
          <applicationName>paytas</applicationName>
          <initializeInOrder>true</initializeInOrder>
          <defaultLibBundleDir>/lib</defaultLibBundleDir>
          <outputDirectory>${ear.release.folder}</outputDirectory>
          <modules>
            <!-- EJBs -->
            <ejbModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-internal-service</artifactId>
              <bundleFileName>services-internal-service.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-iris-persistence-ejb</artifactId>
              <bundleFileName>services-iris-persistence-ejb.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-business-ejb</artifactId>
              <bundleFileName>services-business-ejb.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-facade-ejb</artifactId>
              <bundleFileName>services-facade-ejb.jar</bundleFileName>
            </ejbModule>
            <!-- WEB -->     
	     <webModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-webconsole</artifactId> 
              <contextRoot>/IdpAdmin</contextRoot>
              <bundleFileName>services-webconsole.war</bundleFileName>
            </webModule>
            <webModule>
               <groupId>it.tasgroup.iris.services</groupId>
               <artifactId>services-rest-api</artifactId>
               <contextRoot>/private/iris-api</contextRoot>
               <bundleFileName>services-rest-api.war</bundleFileName>
             </webModule>
            <!-- WEB-SERVICES -->
            <webModule>
              <groupId>it.tasgroup.iris.services</groupId>
              <artifactId>services-ws</artifactId>
              <contextRoot>/paymentws</contextRoot>
              <bundleFileName>services-ws.war</bundleFileName>
            </webModule>
             <webModule>
				<groupId>it.tasgroup.iris.services</groupId>
				<artifactId>services-ndp-rest-api</artifactId>
				<contextRoot>/iris-ndp-api</contextRoot>
				<bundleFileName>services-ndp-rest-api.war</bundleFileName>
			 </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
