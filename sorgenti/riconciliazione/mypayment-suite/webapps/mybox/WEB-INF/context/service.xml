<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
	">

	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="myBoxService" class="it.regioneveneto.mybox.service.MyBoxServiceImpl">
		<property name="rootUploadPath" value="${mybox.rootUploadPath}" />
		<property name="rootDownloadPath" value="${mybox.rootDownloadPath}" />
		<property name="tokenExpirationTime" value="${mybox.tokenExpirationTime}" />
		<property name="myBoxClientDao" ref="myBoxClientDao" />
		<property name="myBoxAuthorizationDao" ref="myBoxAuthorizationDao" />
	</bean>
</beans>
